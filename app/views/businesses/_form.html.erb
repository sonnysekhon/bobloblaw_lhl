<main>
<%= form_for @business, :html => {:multipart => true} do |f| %>
  <% if @business.errors.any? %>
    <div>
      <%= pluralize(@business.errors.count, "error") %> prevented this business from being submitted:
        <ul>
          <%= @business.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
    </div>
  <% end %>
  <div>
    <%= f.label "category" %>
    <%= f.text_field "category" %>
  </div>
  <div>
    <%= f.label "name" %>
    <%= f.text_field "name" %>
  </div>
  <div>
    <%= f.label "phone" %>
    <%= f.text_field "phone" %>
  </div>
  <div>
    <%= f.label "email" %>
    <%= f.text_field "email" %>
  </div>
  <div>
    <%= f.label "description" %>
    <%= f.text_area "description" %>
  </div>
  <div>
    <%= f.label "website" %>
    <%= f.text_field "website" %>
  </div>
  <div>
    <%= f.label "address" %>
    <%= f.text_field "address" %>
  </div>
  <div>
    <%= f.label "city" %>
    <%= f.text_field "city" %>
  </div>
  <div>
    <%= f.label "postal_code" %>
    <%= f.text_field "postal_code" %>
  </div>
  <div>
    <%= f.label "province" %>
    <%= f.text_field "province" %>
  </div>
  <div>
    <%= f.label "country" %>
    <%= f.text_field "country" %>
  </div>
  <div><%= f.file_field :photo %></div>
  <div>
    <%= f.submit "Submit" %>
  </div>
<% end %>
</main>
